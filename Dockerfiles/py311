FROM alpine:3.19 as builder

ARG PYTHON_VERSION
RUN set -x \
	&& apk add --no-cache \
		gcc \
		libffi-dev \
		make \
		musl-dev \
		openssl-dev \
		py3-pip \
		python3 \
		python3-dev

ARG VERSION
RUN set -x \
    && python3 -m venv /opt/venv \
    && . /opt/venv/bin/activate \
	&& if [ "${VERSION}" = "latest" ]; then \
		pip3 install --no-cache-dir --no-compile ruff; \
	else \
		pip3 install --no-cache-dir --no-compile ruff~=${VERSION}.0; \
	fi \
  \
	&& ruff --version \
	\
	&& find /opt/venv/lib/ -name '__pycache__' -print0 | xargs -0 -n1 rm -rf \
	&& find /opt/venv/lib/ -name '*.pyc' -print0 | xargs -0 -n1 rm -rf


FROM alpine:3.19 as production
ARG VERSION
ARG FILE
# https://github.com/opencontainers/image-spec/blob/master/annotations.md
#LABEL "org.opencontainers.image.created"=""
#LABEL "org.opencontainers.image.version"=""
#LABEL "org.opencontainers.image.revision"=""
LABEL "maintainer"="Magnati <magnati@hotmail.de>"
LABEL "org.opencontainers.image.authors"="Magnati <magnati@hotmail.de>"
LABEL "org.opencontainers.image.vendor"="Magnati"
LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.url"="https://github.com/Magnati/docker-ruff"
LABEL "org.opencontainers.image.documentation"="https://github.com/Magnati/docker-ruff"
LABEL "org.opencontainers.image.source"="https://github.com/Magnati/docker-ruff"
LABEL "org.opencontainers.image.ref.name"="ruff ${VERSION}-${FILE}"
LABEL "org.opencontainers.image.title"="ruff ${VERSION}-${FILE}"
LABEL "org.opencontainers.image.description"="ruff ${VERSION}-${FILE}"

RUN set -x \
	&& apk add --no-cache python3

COPY --from=builder /opt/venv /opt/venv

WORKDIR /data
ENV PATH="/opt/venv/bin:$PATH"
ENTRYPOINT ["ruff"]
CMD ["--version"]
